@startuml
actor Student
participant "UI" as UI
participant "API" as API
participant "Service" as Service
database "Database" as DB

activate Student
Student -> UI : Selects study group from dashboard
activate UI

UI -> API : GET /groups/{groupId}/progress
deactivate UI
activate API

API -> Service : getGroupProgress(groupId)
deactivate API
activate Service

Service -> DB : Get group members
activate DB
DB --> Service : Members list
deactivate DB

Service -> DB : Get progress data (per member)
activate DB
DB --> Service : Progress data
deactivate DB

Service -> Service : Calculate rankings

Service --> API : progress list + rankings
deactivate Service
activate API
API --> UI : Show progress + rankings
deactivate API
activate UI
UI -> Student : Display dashboard
deactivate UI
deactivate Student
@enduml
